html
    head
        title=title
        link(
        href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css',
        rel='stylesheet'
        )
    body
        div.container

            div.page-header
                h1 Add an item

            if errors
                each error in errors
                    div.alert.alert-danger
                        span #{error.error}
            if saved
                div.alert.alert-success
                    span Your item has been saved
            form.login-form.form-horizontal(method='post', role='form')
                input(name='_csrf', type='hidden', value=csrfToken)

                div.form-group
                    label.col-sm-4 To-do
                    div.col-sm-8
                        input.form-control(
                        placeholder='eg: Meet Vishnu',
                        required=true,
                        name='activity',
                        type='text',
                        value=activity)
                div.form-group
                    label.col-sm-4 Location
                    div.col-sm-8
                        input.form-control(placeholder='eg: IIT Delhi',
                        required=true,
                        name='location',
                        type='text',
                        value=location)
                div.form-group
                    label.col-sm-4 Time
                    div.col-sm-8
                        input.form-control(placeholder='e.g. 6:30 PM,25th November',
                        required=true,
                        name='time1',
                        type='text',
                        value=time1)
                div.form-group
                    div.col-sm-offset-4.col-sm-8
                        button.login.btn.btn-primary(type='submit') Save
                div.pull-right
                    a(href="/lists") Return to your To-do list
